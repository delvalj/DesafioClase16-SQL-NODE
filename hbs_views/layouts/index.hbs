<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Desafio Entregable 6</title>
</head>
<body>
<div class="container text-center mt-2 border">
    <h1 class="m-2">Desafio Entregable 6</h1>
    <form action="/" enctype="multipart/form-data" method="POST">
        <!-- title input -->
        <div class="form-outline mb-4">
            <input type="text" id="form5Example1" class="" name="title" placeholder="Titulo"/>
            <!--          <label class="form-label" for="form5Example1">Name</label>-->
        </div>
        <!-- thumbnail input -->
        <div class="form-outline mb-4">
            <input type="text" id="form5Example2" class="" name="thumbnail" placeholder="Thumbnail"/>
            <!--          <label class="form-label" for="form5Example2">Email address</label>-->
        </div>
        <!-- price input -->
        <div class="form-outline mb-4">
            <input type="number" name="price" placeholder="Price" id="form5Example3" class=""/>
            <!--          <label class="form-label" for="form5Example2">Email address</label>-->
        </div>
        <!-- Submit -->
        <!--        <button type="submit" class="btn btn-primary btn-block mb-4">Subscribe</button>-->
        <input type="submit" value="add product" class="mb-4"/>
    </form>
</div>

<!-- PRODUCTOS-->
<h2 class="text-center m-2">PRODUCTOS</h2>
<div class="container border p-4">
    <table class="container">
        <thead>
        <th>Title</th>
        <th>Thumbnail</th>
        <th>Price</th>
        </thead>
        <tbody>
        {{#each showProductos }}
            <tr>
                <td>{{title}}</td>
                <td>{{thumbnail}}</td>
                <td>{{price}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

</body>
</html>

<!-- CHAT-->
<html class="m-4">
<div class="container text-center mt-2 border">
    <head>
        <h2>CHAT</h2>
        <script src="/socket.io/socket.io.js"></script>
        <script src="main.js"></script>
    </head>
    <body>
    <div id="messages" class="p-2 m-2"></div>
    <form onsubmit="return enviarMensaje()">
        <input class="m-2 p-1" type="text" id="author"/>
        <input class="m-2 p-1" type="text" id="text"/>
        <button class="m-2 p-1" type="submit">Enviar mensaje</button>
    </form>
    </body>
</div>
</html>
